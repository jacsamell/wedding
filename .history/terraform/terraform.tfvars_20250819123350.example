# Copy this file to terraform.tfvars and fill in your actual values

# Project configuration
project_name   = "jacob-sarah-wedding"
environment    = "production"
aws_region     = "us-west-2"
domain_name    = "jacobandsarah.wedding"

# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard/
spotify_client_id     = "your_spotify_client_id_here"
spotify_client_secret = "your_spotify_client_secret_here"
spotify_redirect_uri  = "http://localhost:8080/callback"
spotify_refresh_token = "your_spotify_refresh_token_here"
spotify_playlist_id   = "your_playlist_id_here"

# Note: To get the refresh token, you'll need to go through Spotify's OAuth flow once
# You can use the spotify-web-api-node examples or tools like Postman to get this token
# The playlist ID can be found in the Spotify URL: https://open.spotify.com/playlist/PLAYLIST_ID
